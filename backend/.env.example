# Flask Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# MongoDB Settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=flowchat

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# WhatsApp Provider Configuration
# Set to 'twilio' or 'direct'
WHATSAPP_PROVIDER=twilio

# WhatsApp Direct API Settings (for Meta/Facebook WhatsApp Business API)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0/your-phone-number-id/messages
WHATSAPP_API_TOKEN=your-whatsapp-api-token-here
WHATSAPP_VERIFY_TOKEN=your-webhook-verification-token

# Twilio WhatsApp Settings (for Twilio WhatsApp API)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# Logging
LOG_LEVEL=INFO 